<% content_for :body_content_title do %>
  <%= @video.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @video.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @video.date %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @video.description %>
    </p>
  </section>
  <section>
    <h1>Video Url</h1>
    <p>
      <%=raw @video.video_url %>
    </p>
  </section>
  <section>
    <h1>Hidden</h1>
    <p>
      <%=raw @video.hidden %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="videos">
      <% @videos.each do |video| %>
        <li>
          <%= link_to video.title, refinery.videos_video_path(video) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
